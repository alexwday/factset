{
  "stage_4_analysis": {
    "description": "Configuration for Stage 4 analysis visualization tool",
    "input_settings": {
      "stage_4_output_path": "Outputs/Stage4/",
      "stage_4_output_file": "stage_4_classified_transcripts.json",
      "ssl_cert_nas_path": "Inputs/certificate/certificate.cer"
    },
    "token_analysis": {
      "max_token_length": 750,
      "tiktoken_model": "gpt-3.5-turbo",
      "fallback_chars_per_token": 4,
      "enable_truncation_analysis": true
    },
    "visualization_settings": {
      "output_directory": "Outputs/Analysis/",
      "chart_width": 1200,
      "chart_height": 800,
      "color_scheme": {
        "management_discussion": "#1f77b4",
        "investor_qa": "#ff7f0e",
        "other": "#d62728",
        "high_confidence": "#2ca02c",
        "medium_confidence": "#ffbb78",
        "low_confidence": "#ff9896"
      }
    },
    "analysis_thresholds": {
      "high_confidence_threshold": 0.8,
      "truncation_warning_threshold": 0.2,
      "token_efficiency_target": 0.85,
      "min_paragraphs_per_block": 1,
      "max_paragraphs_per_block": 20
    },
    "chart_types": {
      "enable_interactive_charts": true,
      "enable_static_export": true,
      "export_formats": ["html", "png", "svg"],
      "include_summary_dashboard": true
    },
    "speaker_analysis": {
      "role_extraction_keywords": {
        "CEO": ["ceo", "chief executive"],
        "CFO": ["cfo", "chief financial"],
        "Executive": ["president", "chairman", "chief", "head", "director"],
        "Analyst": ["analyst"],
        "Operator": ["operator", "moderator"]
      },
      "analyze_transitions": true,
      "include_interaction_patterns": true
    },
    "section_analysis": {
      "classification_methods": [
        "section_uniform",
        "breakpoint_detection", 
        "contextual_individual"
      ],
      "confidence_bins": [0.0, 0.5, 0.8, 0.9, 1.0],
      "success_rate_by_institution": true
    },
    "chunking_analysis": {
      "chunk_size_options": [500, 750, 1000, 1500, 2000],
      "analyze_paragraph_boundaries": true,
      "token_density_analysis": true,
      "truncation_impact_analysis": true
    },
    "reporting": {
      "generate_markdown_report": true,
      "include_recommendations": true,
      "include_processing_summary": true,
      "include_visualization_links": true
    }
  }
}